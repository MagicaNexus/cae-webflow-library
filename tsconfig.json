{
  "extends": "@finsweet/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "ignoreDeprecations": "5.0",
    "baseUrl": "./",
    "paths": {
      "$utils/*": ["src/utils/*"],
      "$styles/*": ["src/styles/*"],
      "$animations/*": ["src/animations/*"],
      "$components/*": ["src/components/*"],
      "$global/*": ["src/global/*"]
    }
  }
}
